[core]
	excludesfile = ~/.gitignore
	pager = 
	editor = ed
	autocrlf = false
        hooksPath = ~/.gittemplate
[init]
        templateDir = /var/empty
[alias]
	amend = "!git add -A; git commit --amend --no-edit"
	co = checkout
	di = diff
	last = log --stat -1 HEAD
	up = "!git remote update -p; git merge --ff-only @{u}"
[pull]
	ff = only
[push]
	default = simple
[color]
	ui = false
