uncolor index *
uncolor header *
uncolor body *
mono header underline ^(From|Subject):
mono quoted bold

set ascii_chars=yes
set charset=utf-8:us-ascii

bind editor <delete> backspace

# keybindings similar to PINE 3.95 and subsequently more like vi (j/k)
bind index <up> previous-entry
bind index <down> next-entry
bind index ' ' next-page
bind index - previous-page
bind index c mail
bind index g change-folder
bind index x sync-mailbox
bind index $ sort-mailbox
bind index a tag-prefix
bind index r group-reply
bind index R reply
bind index m current-middle
bind index y create-alias
bind index , refresh

macro index H g!\rm
macro index S g=sent\rm
macro index V g!!\rm
macro pager H g!\rm
macro pager S g=sent\rm
macro pager V g!!\rm

bind index k previous-entry
bind index j next-entry
bind pager k previous-entry
bind pager j next-entry

bind pager ' ' next-page
bind pager g change-folder
bind pager c mail
bind pager r group-reply
bind pager R reply
bind pager m skip-quoted
bind pager y create-alias

bind pager G check-traditional-pgp

macro index \cb |urlview\n
macro pager \cb |urlview\n

set mbox_type=maildir

set folder=~/mail
set postponed=+postponed
set record=+sent/
set spoolfile=+inbox/

unset strict_threads
folder-hook . set sort=threads
folder-hook . set sort_aux=date-received
folder-hook sent set sort=date-sent

set delete=yes
unset mbox
set move=no
set postpone=no

set abort_nosubject=no
set abort_unmodified=no
set autoedit=yes
set edit_headers=yes
set editor="vim -N -u ~/.muttrc-vimrc"
set visual="vim -N -u ~/.muttrc-vimrc"
set fast_reply=yes
set sig_dashes=no
unset signature
set use_domain

ignore *
unignore from: date subject to cc reply-to
unhdr_order *
hdr_order From: Date: To: Reply-To: Cc: Subject:

set attribution="* %n <%a>"
set forward_format="%s (fwd)"

set status_on_top
set status_format="%f [msgs:%?M?%M/?%m%?n? new:%n?%?o? old:%o?%?d? del:%d?%?F? flag:%F?%?t? tag:%t?%?p? post:%p?%?b? inc:%b?%?l? %l?] %> %s  %P"
set pager_format="%> [lines:%l %c]"
set index_format="%3C %Z %{%b %d}  %-16.16F  %s"
set folder_format="%2C %t %N %f %> %8s  %d "

set beep_new=no
set confirmappend=no
set hidden_host=yes
unset mark_old
set markers=no
set menu_scroll=yes
set pager_context=2
set pager_index_lines=4
set pager_stop=yes
set sleep_time=0
set smart_wrap=yes
set tilde
set wrap_search
set write_inc=10

# FIXME install from ports
set sendmail=/opt/local/sbin/ssmtp
set sendmail_wait=-1
