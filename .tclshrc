# otherwise big confusion with my ZSH prompt of "% "
set tcl_prompt1 {printf "tclsh> "}

# LISP, yo
set operators [list + - * /]
foreach o $operators {
  proc $o {a b} [list expr "\$a $o \$b"]
}

proc repeat {n body} {
  set res ""
  while {$n} {
    incr n -1
    set res [uplevel $body]
  }
  return $res
}

proc strreverse str {
  set res ""
  for {set i [string length $str]} {$i > 0} {} {
    append res [string index $str [incr i -1]]
  }
  set res
}
